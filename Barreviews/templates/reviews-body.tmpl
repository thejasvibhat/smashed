<!-- Main Content -->
<div class = "marginTopTwenty"></div>

<div class = "container">
  <ul id="gallery-list-reviews" class="clearfix">
#for $r in $reviews
#set $rating = $r.rating.replace('.', '_')
    <li class="item col-lg-4 all">
    	<a href = "/b/$r.bid">
			<div class="image-wrapper">
	  			<img class = "img-responsive" src = "/res/download/${r.images[0]}" />
			</div>
			<div class="img-title-big">
	  			<div class = "col-lg-9">
	    			<h6>$r.name</h6>
	    			<div class = "gridRatingContainer">
	      				<img class = "img-responsive" src = "/reviewhtml/assets/rate_${rating}.png" />
	    			</div>
	    			<div class = "gridMeta margintopfive">
	      				$r.address
	    			</div>
	  			</div>
	  			<div class = "col-lg-3 marginTopTwenty">
	    			<a href = "javascript:void(0);">
	      				<img onCLick = 'showBarOnMapModal(this);' src = "/reviewhtml/assets/googlemap.jpg" width = "42" value="${r.latlon}" />
	    			</a>
	  			</div>
			</div>
      </a>
    </li>
#end for
  </ul>
</div>

<div class = "marginTopTwenty"></div>
<div class = "container">
<div class = "row">
    <div class = "col-lg-12">
#if $currentpage != 1
#set $prevpagenum = $currentpage - 1
        <div class = "col-lg-1">
	    <a href = "/b/page/${prevpagenum}">&lt; Prev</a>
        </div>
#end if
#if $currentpage < $totalpagecount
#set $nextpagenum = $currentpage + 1
	<div class = "col-lg-2">
	    <a href = "/b/page/${nextpagenum}">&gt; Next</a>
        </div>
#end if
    </div>
</div>
</div>
<div id = "mapModal" style = "display:none;" title = "Location">
	<div id = "map_canvas" style = "height:300px;"></div>
</div>
