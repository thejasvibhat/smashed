<div class="memeCreateHead">
    <div class="container"> 
        <span>Drag an image from image roller or </span>
        <span class = "cursorPointer" onclick="ChangeBackground();"> upload new ( + )</span>
    </div> 
</div>

<div class = "marginTopTwenty"></div>    
   
<div class = "container"> 

	<a class="prev browse left"></a>
 
	<!-- root element for scrollable -->
	<div class="scrollable dropShadowed" id="scrollable"> 
  
  		<!-- root element for the items -->
  		<div class="items"> 
     		<!--img src="http://farm1.static.flickr.com/143/321464099_a7cfcb95cf_t.jpg"   draggable="true"  ondragstart="DragMeme(event)"/-->
  		</div>  
	</div>   
	<a class="next browse right"></a>  
</div> 
      
<div class = "marginTopTwenty"></div> 

<div class="container">
        <div class="row">
            <div class = "col-lg-6">
            	<div id="BaseCanvas"  class="dottedBorder backgroundLoad imgParent" dropzone="copy" style="background-color:#ababab;"> 
                	<img id="backImage" src="/MEMEHTML/assets/drophere.jpg" onload="OnImageLoad()" > 
            	</div>
            </div>
            
            
            <div class = "col-lg-6">
                <label class = "labelBig">Font Size</label>
                <dd class='stepper_widget' ><input style = "width:120px;" type='text' class="form-control" placeholder="20" id='fontSizeText' value='20' class='min_20_max_100' onblur="FontSizeChange(this.value);">   
                	<div class = "marginTopTen"></div>
                    <button class="upbutton" onclick="UpdateStepperUp();">+</button>
                    <button class="dnbutton" onclick="UpdateStepperDown();">-</button>     
                </dd>   
                <div class = "sep"></div>
                <div class = "marginTopTen"></div>
                
            	<label class = "labelBig">Color</label>
                <input id="color1" name="color1" type="text" value="#000" onchange="ColorChanged(this.value);" />  
                <div class = "sep"></div>
                <div class = "marginTopTen"></div>
                 
                <label class = "labelBig">Font Style</label>
                <div>
                     <select  onchange="UpdateFontStyle(this.value);">                        
                        <option>Normal</option>
                        <option>Italic</option>
                     </select>
                </div>
                <div class = "sep"></div>
                <div class = "marginTopTen"></div> 
                
          		<label class = "labelBig">Font Weight</label>
                <div>
                     <select  onchange="UpdateFontweight(this.value);">                        
                        <option>Normal</option>
                        <option>Bold</option>
                     </select>
                </div>
                <div class = "sep"></div>
                <div class = "marginTopTen"></div> 
				<label class = "labelBig">Font Family</label>
           		<div>
                    <select  onchange="UpdateFamily(this.value);">                        
                        <option>Arial</option>   
                        <option>Verdana</option>                               
                        <option>Times</option>   
                        <option>Trebucet</option>   
                    </select>
                </div>
                <div class = "sep"></div>
                <div class = "marginTopTen"></div> 
                
          		<input type="button" class = "btn btn-primary btn-lg" value="Add Caption ( + )" onclick="AddCaption();" />   
                <input type="button" class = "btn btn-warning btn-lg" value="Crop" onclick="Crop();" />   
                <input type="button" class = "btn btn-success btn-lg" value="Save" onclick="Save();" />   
                
                <div class = "marginTopTen"></div>
                
                <div id = "memeSpinner" class = "col-lg-12 loaderTop" style = "padding:0;display:none;">
			<img src = "/assets/pacman.gif" />
			&nbsp;&nbsp;
			<span id = "spinnerMg">Cooking your Meme.. Hang on!
		</div>  
        </div>     
     </div>    
</div>